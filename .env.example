# ============================================
# Database Configuration
# ============================================

# Option 1: SQLite (local development)
# DATABASE_URL="file:./dev.db"
# DIRECT_URL="file:./dev.db"


# Option 2: PostgreSQL (production recommended)
# Local PostgreSQL
DATABASE_URL="postgresql://postgres:password@localhost:5432/mo_gallery"
DIRECT_URL="postgresql://postgres:password@localhost:5432/mo_gallery"

# Neon (Serverless PostgreSQL)
# DATABASE_URL="postgresql://user:password@ep-xxx.us-east-1.aws.neon.tech/neondb?sslmode=require"
# DIRECT_URL="postgresql://user:password@ep-xxx.us-east-1.aws.neon.tech/neondb?sslmode=require"

# Supabase
# DATABASE_URL="postgresql://postgres:[PASSWORD]@db.[PROJECT].supabase.co:5432/postgres"
# DIRECT_URL="postgresql://postgres:[PASSWORD]@db.[PROJECT].supabase.co:5432/postgres"

# ============================================
# Authentication
# ============================================
JWT_SECRET="your-secret-key-change-in-production"

# Admin credentials for seed (optional)
ADMIN_USERNAME="admin"
ADMIN_PASSWORD="admin123"

# Site settings
SITE_TITLE="MO GALLERY"
CDN_DOMAIN=""

# ============================================
# Linux DO OAuth (Optional)
# ============================================
# 在 https://connect.linux.do/dash/sso 申请接入获取
LINUXDO_CLIENT_ID=""
LINUXDO_CLIENT_SECRET=""
# 回调地址，格式: https://your-domain.com/login/callback
LINUXDO_REDIRECT_URI=""
# 评论功能仅限 Linux DO 用户（true/false）
# 管理员绑定 Linux DO 账号：先用账号密码登录管理后台，在系统配置中绑定
LINUXDO_COMMENTS_ONLY=""

